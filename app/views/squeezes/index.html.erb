<% content_for :head do %>
   <%= stylesheet_link_tag :squeezes -%>
<% end %>

<section class="container main">
  <section class="left col-md-4">
    <article class="profile box">
      <div class="wrapper col-md-10">
        <div class="description">
          <%= image_tag "intro-bg1.jpg", class: "img-rounded" %>
          <header>
            <h4>Aitor Palacios</h4>
            <h6>@apalzab</h6>
          </header>
        </div>
      </div>
      <div class="info col-md-10 bold">
        <ul>
          <li class="col-md-4">Squeezes</li>
          <li class="col-md-4">Followers</li>
          <li class="col-md-4">Following</li>
        </ul>
        <ul>
          <li class="col-md-4"><%= @user.squeezes.count %></li>
          <li class="col-md-4"><%= @user.followers.count %></li>
          <li class="col-md-4"><%= @user.followed_users.count %></li>
        </ul>
      </div>
      <div class="actions col-md-10">
        <%= link_to "New Squeeze", new_squeeze_path, class: "btn" %>
      </div>
    </article>

    <article class="most-voted box">
      <h3>Most voted</h3>
    </article>
  </section>

  <section class="squeezes-all col-md-8">
    <h2>Squeezes</h2>
    <% @last_squeezes.each do |squeeze| %>
      <article class="squeeze">
        <h3><%= link_to squeeze.title, squeeze %></h3>
        <p><%= squeeze.content.to_s.truncate(120, omission: '...') %></p>
      </article>
    <% end %>
  </section>
</section>

